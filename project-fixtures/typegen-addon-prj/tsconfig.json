{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "../../lib",
        "_name": "ts-graphql-plugin",
        "tag": "gql",
        "schema": "schema.graphql",
        "enabledGlobalFragments": true,
        "typegen": {
          "addons": ["./addon"]
        }
      }
    ]
  }
}
