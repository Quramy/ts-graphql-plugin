{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "plugins": [
      {
        "name": "ts-graphql-plugin",
        "schema": "schema.graphql",
        "enabledGlobalFragments": true,
        "tag": {
          "name": "graphql",
          "ignoreFunctionCallExpression": false
        },
        "exclude": ["codegen.ts", "src/gql"]
      }
    ]
  }
}
