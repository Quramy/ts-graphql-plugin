{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "plugins": [
      {
        "name": "ts-graphql-plugin",
        "tag": "gql",
        "schema": "schema.graphql",
        "enabledGlobalFragments": true,
        "localSchemaExtensions": ["local-extension.graphql"],
        "typegen": {
          "addons": ["./addon"]
        }
      }
    ]
  }
}
