{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "target": "es2015",
    "sourceMap": true,
    "outDir": "lib",
    "declarationDir": "types",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["es2015", "esnext.asynciterable"],
    "typeRoots": ["./node_modules/@types", "./typedef"],
    "plugins": [
      {
        "name": "typescript-eslint-language-service"
      }
    ]
  },
  "exclude": ["lib", "e2e", "types", "typedef", "node_modules"]
}
