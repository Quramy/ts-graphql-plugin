{
  "compilerOptions": {
    "skipLibCheck": true,
    "incremental": true,
    "module": "commonjs",
    "declaration": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "stripInternal": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "typescript-eslint-language-service"
      }
    ]
  },
  "exclude": ["lib", "e2e", "types", "typedef", "node_modules", "project-fixtures", "tools"]
}
