{
  "name": "ts-graphql-plugin",
  "version": "1.3.0",
  "description": "TypeScript Language Service Plugin for GraphQL",
  "keywords": [
    "typescript",
    "graphql",
    "language service"
  ],
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "clean": "rimraf lib types e2e/*.log",
    "compile": "tsc -p .",
    "lint": "tslint -p tsconfig.json --type-check src/**/*.ts",
    "jest": "jest",
    "e2e": "node e2e/run.js && node e2e/http-req.test.js",
    "test": "yarn run lint && jest && yarn run e2e",
    "watch:compile": "tsc --watch -p .",
    "watch:jest": "jest --watch",
    "watch": "yarn run clean  && run-p watch:*"
  },
  "author": "Quramy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Quramy/ts-graphql-plugin.git"
  },
  "dependencies": {
    "graphql-language-service-interface": "^2.0.0"
  },
  "devDependencies": {
    "@types/graphql": "^14.2.3",
    "@types/jest": "^24.0.15",
    "@types/node": "^13.1.0",
    "glob": "^7.1.2",
    "graphql": "^14.5.0",
    "jest": "^24.8.0",
    "npm-run-all": "^4.1.1",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.7.0",
    "typescript": "~3.5.0"
  },
  "peerDependencies": {
    "graphql": "^0.12.0 | ^14.0.0",
    "typescript": "^2.3.0 | ^3.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(src/.*\\.test)\\.ts$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "\\.d\\.ts$",
      "lib/.*",
      "typedef/.*",
      "types/.*"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ]
  }
}
