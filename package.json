{
  "name": "ts-graphql-plugin",
  "version": "0.1.3",
  "description": "TypeScript Language Service Plugin for GraphQL",
  "keywords": [
    "typescript",
    "graphql",
    "language service"
  ],
  "main": "built/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "lint": "tslint -p tsconfig.json --type-check src/**/*.ts",
    "compile": "tsc -p .",
    "test": "npm run lint && ava",
    "clean": "rimraf built types",
    "watch:compile": "tsc --watch -p .",
    "watch:ava": "ava --watch",
    "watch": "run-p watch:*"
  },
  "author": "Quramy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Quramy/ts-graphql-plugin.git"
  },
  "dependencies": {
    "graphql-language-service-interface": "0.0.4"
  },
  "devDependencies": {
    "@types/graphql": "^0.9.0",
    "@types/node": "^7.0.8",
    "ava": "^0.19.0",
    "graphql": "^0.9.1",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.6.1",
    "tslint": "^5.0.0",
    "typescript": "^2.2.2"
  },
  "peerDependencies": {
    "graphql": "^0.9.1",
    "typescript": "^2.2.2"
  },
  "ava": {
    "files": [
      "built/test/**/*.test.js"
    ]
  }
}
