{
  "name": "ts-graphql-plugin",
  "version": "0.3.2",
  "description": "TypeScript Language Service Plugin for GraphQL",
  "keywords": [
    "typescript",
    "graphql",
    "language service"
  ],
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "clean": "rimraf lib types e2e/*.log",
    "compile": "tsc -p .",
    "lint": "tslint -p tsconfig.json --type-check src/**/*.ts",
    "ava": "ava",
    "e2e": "node e2e/run.js",
    "test": "yarn run lint && ava && yarn run e2e",
    "watch:compile": "tsc --watch -p .",
    "watch:ava": "ava --watch",
    "watch": "yarn run clean  && run-p watch:*"
  },
  "author": "Quramy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Quramy/ts-graphql-plugin.git"
  },
  "dependencies": {
    "graphql-language-service-interface": "0.0.7"
  },
  "devDependencies": {
    "@types/graphql": "^0.9.0",
    "@types/node": "^7.0.8",
    "ava": "^0.19.0",
    "glob": "^7.1.1",
    "graphql": "^0.9.1",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.6.1",
    "tslint": "^5.0.0",
    "typescript": "~2.3.0"
  },
  "peerDependencies": {
    "graphql": "^0.9.1",
    "typescript": "^2.2.1"
  },
  "ava": {
    "files": [
      "lib/**/*.test.js"
    ]
  }
}
